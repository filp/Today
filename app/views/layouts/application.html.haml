%html
  %head
    %meta{charset: "utf-8"}
    %title= page_title
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600"
    = stylesheet_link_tag :application
  %body{class: body_class}
